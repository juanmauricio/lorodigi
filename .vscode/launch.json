    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Iniciar LoroDigi",
            "program": "${workspaceRoot}/server.js",
            "args": [
                "default"
            ],
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Iniciar default gulp",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "args": [
                "default"
            ],
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Asociar al proceso",
            "port": 5858
        },
        {
            "name": "Launch localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://http://localhost:3000/",
            "webRoot": "${workspaceRoot}/app/files"
        }
    ]
}